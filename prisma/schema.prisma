
generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
}



enum Status {
  draft
  published
  archived
}




model Post {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  title          String
  subtitle       String?
  content        String
  slug           String    @unique
  authorName     String    @default("DeMarcus")
  authorEmail    String  @default("Demarcus431@gmail.com")
  authorAvatar   String  @default("https://res.cloudinary.com/di6elrrye/image/upload/v1770294516/profileblog_ajkt7o.png")
  featuredImage  String?
  tags           String[]
  readTime       Int?
  views          String? @default("1.3k")
  comments       String? @default("25")
  
  status         Status    @default(draft)

  publishedDate  DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  
  // @@index([slug])
  @@index([status])
 
  @@index([publishedDate])
  @@index([authorEmail])
  @@map("post")
}
